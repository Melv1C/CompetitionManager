{
  "compilerOptions": {
    "target": "ES2022",
    "declaration": true,
    "moduleResolution": "bundler",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@generated/*": ["./generated/*"],
    },
  },
  "exclude": ["node_modules"],
}
